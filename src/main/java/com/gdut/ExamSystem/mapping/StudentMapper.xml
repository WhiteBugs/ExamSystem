<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdut.ExamSystem.dao.StudentMapper">
  <resultMap id="BaseResultMap" type="com.gdut.ExamSystem.model.Student">
    <result column="NAME" jdbcType="VARCHAR" property="name" />
    <result column="PASSWORD" jdbcType="VARCHAR" property="password" />
  </resultMap>
  <insert id="insert" parameterType="com.gdut.ExamSystem.model.Student">
    insert into USERS (NAME, PASSWORD)
    values (#{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.gdut.ExamSystem.model.Student">
    insert into USERS
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        NAME,
      </if>
      <if test="password != null">
        PASSWORD,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        #{password,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  
  <resultMap type="com.gdut.ExamSystem.model.Student" id="student">
      <id column="studentid" property="name" />
      <id column="studentpassword" property="password"/>
  </resultMap>
  <select id="select" parameterType="String" resultMap="student">
    select * from Student where StudentId = #{StudentId}
  </select>
  
</mapper>